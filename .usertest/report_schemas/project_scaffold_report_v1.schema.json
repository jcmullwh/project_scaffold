{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/project_scaffold/usertest/report_v1.schema.json",
  "title": "project_scaffold Usertest Report (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "repo",
    "persona",
    "mission",
    "templates",
    "quickstart",
    "notes",
    "risks",
    "next_steps"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "repo": {
      "type": "string",
      "const": "project_scaffold"
    },
    "persona": {
      "type": "string",
      "minLength": 1
    },
    "mission": {
      "type": "string",
      "minLength": 1
    },
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "summary"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "summary": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "quickstart": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "command",
        "expected_output"
      ],
      "properties": {
        "command": {
          "type": "string",
          "minLength": 1
        },
        "expected_output": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
